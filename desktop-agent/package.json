{
  "name": "lookout-desktop-agent",
  "version": "1.0.2",
  "description": "Lookout Desktop Agent",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win"
  },
  "build": {
    "appId": "br.com.imstech.desktopagent",
    "productName": "Lookout",
    "artifactName": "Lookout Setup ${version}.${ext}",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Lookout"
    }
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "ws": "^8.19.0"
  }
}
